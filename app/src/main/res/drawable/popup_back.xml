<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item >
        <shape android:shape="rectangle">
            <gradient android:startColor="#7f000000" android:endColor="@color/transparent" android:type="radial" android:gradientRadius="500dp"/>
            <corners android:radius="@dimen/corner_radius"/>
        </shape>
    </item>
    <item android:right="10dp" android:bottom="10dp" android:left="10dp" android:top="10dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/cardBackground"/>
            <corners android:radius="@dimen/corner_radius"/>
        </shape>
    </item>
</layer-list>